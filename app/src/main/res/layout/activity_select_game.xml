<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00002c"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.liron.crypticcrossword.SelectGameActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.liron.crypticcrossword.TextImageView
            android:id="@+id/sudoku"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="setGame"
            android:src="@drawable/sudoku_icon"
            android:tag="@string/sudoku"/>

        <com.liron.crypticcrossword.TextImageView
            android:id="@+id/crossword"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="setGame"
            android:src="@drawable/crossword_icon"
            android:tag="@string/crossword"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.liron.crypticcrossword.TextImageView
            android:id="@+id/arrowword"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="setGame"
            android:src="@drawable/arrowword_icon"
            android:tag="@string/arrowword"/>

        <com.liron.crypticcrossword.TextImageView
            android:id="@+id/griddler"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="setGame"
            android:src="@drawable/griddler_icon"
            android:tag="@string/griddler"/>
    </LinearLayout>
</LinearLayout>
